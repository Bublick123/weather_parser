# Скопируй этот файл в .env (рядом с docker-compose.yml) и поменяй значения под себя.

# --- PostgreSQL ---
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# SQLAlchemy DSN (используется фронтом)
DATABASE_URL=postgresql+psycopg2://airflow:airflow@postgres/airflow

# --- Airflow admin user (создаётся в airflow-init) ---
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_FIRSTNAME=Admin
AIRFLOW_ADMIN_LASTNAME=User
AIRFLOW_ADMIN_EMAIL=admin@example.com

# --- Frontend -> Airflow API auth ---
AIRFLOW_API_BASE=http://airflow-webserver:8080/api/v1
AIRFLOW_API_USERNAME=admin
AIRFLOW_API_PASSWORD=admin

# --- Ports (host side) ---
AIRFLOW_UI_PORT=8001
FRONTEND_PORT=8002

# --- Optional ---
# Не создавать новую запись о погоде, если последняя по городу моложе N минут
MIN_AGE_MINUTES=30

# --- OpenWeatherMap ---
OPENWEATHER_API_KEY=PUT_YOUR_OPENWEATHER_KEY_HERE

# --- Telegram bot ---
TELEGRAM_BOT_TOKEN=PUT_YOUR_TELEGRAM_BOT_TOKEN_HERE

